<body>
    <section id="headerTop">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-4 d-flex">
                    <div class="email d-flex">
                        <i class="fa-solid fa-envelope"></i>
                        <a href="">
                           @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="emailHeader").Value
                        </a>
                    </div>

                    <div class="phone d-flex mx-2">
                        <i class="fa-solid fa-mobile"></i>
                        <a href="">
                            @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="phoneHeader").Value
                        </a>
                    </div>

                </div>
                <div class="col-lg-3 icons ">
                    <ul class=" d-flex justify-content-around w-25 ">
                        <li><a href=""><i class=" @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="twitter").Value mx-2"></i></a></li>
                        <li><a href=""><i class=" @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="facebook").Value mx-2"></i></a></li>
                        <li><a href=""><i class=" @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="instagram").Value mx-2"></i></a></li>
                        <li><a href=""><i class=" @layoutservis.GetDatas().Result.FirstOrDefault(s=>s.Key=="linkedin").Value mx-2"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
    <header>
     
        <section id="headerBottom">
            <div class="container">
                <div class="row  justify-content-between">
                    <div class="logo col-lg-3">
                        <a href="">
                            <h3>GREEN</h3>
                        </a>
                    </div>
                    <div class="col-lg-9 navbar">
                        <ul>
                            <li><a href="">Home</a></li>
                            <li><a href="">About</a></li>
                            <li><a href="">Services</a></li>
                            <li><a href="">Portfolio</a></li>
                            <li><a href="">Team</a></li>
                            <li><a href="">Drop Down</a></li>
                            <li><a href="">Contact</a></li>
                            <li><a href=""><i class="fa-solid fa-right-to-bracket"></i></a></li>
                            <li><a href=""><i class="fa-solid fa-address-card"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </header>
    @RenderBody()
